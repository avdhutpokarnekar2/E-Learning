%h1 Listing assessments

%table
  %thead
    %tr
      %th Question set
      %th Grade
      %th Assignment
      %th User
      %th
      %th
      %th

  %tbody
    - @assessments.each do |assessment|
      %tr
        %td= assessment.question_set
        %td= assessment.grade
        %td= assessment.assignment
        %td= assessment.user
        %td= link_to 'Show', assessment
        %td= link_to 'Edit', edit_assessment_path(assessment)
        %td= link_to 'Destroy', assessment, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Assessment', new_assessment_path
