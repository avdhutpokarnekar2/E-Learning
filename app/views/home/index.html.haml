              .course
                .course_image
                  = image_tag('course_1.jpg')
                .course_body
                  .course_header.d-flex.flex-row.align-items-center.justify-content-start
                    .course_tag
                      %a{:href => "#"} Featured
                    .course_price.ml-auto
                      Price:
                      %span $
                      = course.fees
                  .course_title
                    %h3
                      %a{:href => "courses.html"}
                      = course.name
                  .course_text
                    = course.description
                  .course_footer.d-flex.align-items-center.justify-content-start
                    .course_author_image
                      = image_tag('featured_author.jpg')
                    .course_author_name
                      By
                      %a{:href => "#"} James S. Morrison
                    .course_sales.ml-auto
                      %span
                      = course.duration
                      Months
