/ Featured Course
.featured
  .container
    .row
      .col
        / Home Slider Nav
        .home_slider_nav_container.d-flex.flex-row.align-items-start.justify-content-between
          .home_slider_nav.home_slider_prev.trans_200
            %i.fa.fa-angle-left{"aria-hidden" => "true"}
          .home_slider_nav.home_slider_next.trans_200
            %i.fa.fa-angle-right{"aria-hidden" => "true"}
        .featured_container
          .row
            .col-lg-6.featured_col
              .featured_content
                .featured_header.d-flex.flex-row.align-items-center.justify-content-start
                  .featured_tag
                    %a{:href => "#"} Featured
                  .featured_price.ml-auto
                    Price:
                    %span $
                    = @course.fees
                .featured_title
                  %h3
                    %a{:href => "courses.html"}
                    = @course.name
                .featured_text
                = @course.description
                .featured_footer.d-flex.align-items-center.justify-content-start
                  .featured_author_image
                    = image_tag('featured_author.jpg')
                  .featured_author_name
                    By
                    %a{:href => "#"} James S. Morrison
                  .featured_sales.ml-auto
                    %span
                    = @course.duration
                    Months
            .col-lg-6.featured_col
              / Background image artist https://unsplash.com/@jtylernix
              .featured_background{style: "background-image: url('#{image_path('featured.jpg')}')" }
/ Courses
.courses
  .container
    .row
      .col-lg-10.offset-lg-1
        .section_title.text-center
