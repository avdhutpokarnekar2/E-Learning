.main_padding
.col-md-8.offset-md-2
  %h3 Listing assignments
  %br
  %table
    %thead
      %tr
        %th Name
        %th Course
        %th
        %th
        %th

    %tbody
      - @assignments.each do |assignment|
        %tr
          %td= assignment.name
          %td= assignment.course.name
          %td= link_to 'Show', assignment
          %td= link_to 'Edit', edit_assignment_path(assignment)
          %td= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' }
          %td= link_to 'Add Questions', new_assignment_question_path(assignment_id: assignment.id)


  %br
  = link_to 'New Assignment', new_assignment_path 
%br
