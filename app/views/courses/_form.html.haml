= form_for @course, html: {class: "form-horizontal"} do |f|
  - if @course.errors.any?
    .alert.alert-danger
      %h4= "#{pluralize(@course.errors.count, "error")} prohibited this course from being saved:"
      %ul
        - @course.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :name, class: "control-label col-sm-2"
    .col-sm-10
      = f.text_field :name, class: "form-control"

  .form-group
    = f.label :description, class: "control-label col-sm-2"
    .col-sm-10
      = f.text_field :description, class: "form-control"

  .form-group
    = f.label :fees, class: "control-label col-sm-2"
    .col-sm-10
      = f.number_field :fees, class: "form-control"

  .form-group
    = f.label :course_type, class: "control-label col-sm-2"
    .col-sm-10
      = f.text_field :course_type, class: "form-control"

  .form-group
    = f.label :duration, class: "control-label col-sm-2"
    .col-sm-10
      = f.number_field :duration, class: "form-control"

  .form-group
    = f.label :start_date, class: "control-label col-sm-2"
    .col-sm-10
      = f.datetime_field :start_date, class: "form-control"
  
  .form-group
    = f.label :image, class: "control-label col-sm-2"
    .col-sm-10
      = f.file_field :image, class: "form-control"

  .form-group
    .col-sm-offset-2.col-sm-10
      = link_to 'Add lesson', new_lesson_path, class: "btn btn-secondary"

  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit 'Save', class: "btn btn-primary"
