%h1.main_padding Listing courses

%table
  %thead
    %tr
      %th Name
      %th Description
      %th Fees
      %th Course type
      %th Duration
      %th Start date
      %th
      %th
      %th

  %tbody
    - @courses.each do |course|
      %tr
        %td= course.name
        %td= course.description
        %td= course.fees
        %td= course.course_type
        %td= course.duration
        %td= course.start_date
        %td= link_to 'Show', course
        %td= link_to 'Edit', edit_course_path(course)
        %td= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }
        %td= link_to 'Add lesson', new_lesson_path(course_id: course.id)
        %td= link_to 'Add Assignment', new_assignment_path(course_id: course.id)

%br

= link_to 'New Course', new_course_path